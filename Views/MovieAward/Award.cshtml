@model FletNix.ViewModels.AwardViewModel
@{
    var movie = Model.movies.First();

    ViewData["title"] = "Award on this movie " + movie.title;
}

<h1>@ViewData["title"]</h1>

<div id="movieHeader">
    <iron-image src="https://placehold.it/325x500" style="background-color: lightgray;" preload fade></iron-image>
    <div id="movieInformation">
        <form asp-controller="MovieAward" asp-action="Award" method="post">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>

            <h3>Award</h3>
            <input type="hidden" name="movieId" value="@movie.movie_id"/>

            <textarea cols="65" rows="10" name="award"></textarea>

            <h3>Result</h3>
            <input type="text" maxlength="10" name="result"/>

            <h3>Number of Awards</h3>
            <textarea cols="65" rows="10" name="number_of_awards"></textarea>

            <paper-button onclick="sendForm(this)" id="sendRating">Add award</paper-button>
        </form>
    </div>
</div>

<script>
    var sendForm = function (element) {
        element.parentElement.submit();
    };
</script>